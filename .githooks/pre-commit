#!/usr/bin/env bash

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}Running pre-commit hooks...${NC}"

if ! command -v bazelisk >/dev/null 2>&1; then
    echo -e "${RED}bazelisk not found. Install it first to run the pre-commit hooks.${NC}"
    exit 1
fi

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}No staged files found.${NC}"
    exit 0
fi

echo -e "${BLUE}Formatting and linting via Bazelisk...${NC}"

bazelisk run //:lint_fix

if ! git diff --exit-code >/dev/null; then
    echo -e "${YELLOW}"
    echo "Some files were automatically formatted. Please review the changes and re-stage them:"
    echo "  git add <modified-files>"
    echo "  git commit"
    echo -e "${NC}"
    exit 1
fi

if ! bazelisk run //:lint; then
    echo -e "${RED}Lint checks failed. Please fix the issues and try again.${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"
exit 0
